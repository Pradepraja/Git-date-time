pipeline {
    agent any
        stage {
        stage('Display current time and date in IST') {
            steps {
                sh '''#!/bin/bash
                    TZ='Asia/Kolkata'
                    export TZ
                    current_time=$(date +%T)
                    current_date=$(date +%F)
                    echo "Current time and date in IST: $current_date $current_time"
                '''
            }
        }

        stage('Display one hour ahead time in IST') {
            steps {
                sh '''#!/bin/bash
                    TZ='Asia/Kolkata'
                    export TZ
                    current_time=$(date +%s)
                    one_hour_ahead_time=$((current_time + 3600))
                    one_hour_ahead_time=$(date -d @"$one_hour_ahead_time" +%T)
                    echo "One hour ahead time in IST: $one_hour_ahead_time"
                '''
            }
        }
    }
}
